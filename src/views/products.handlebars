<h1>Productos</h1>
<div>
    {{#if user}}
        <p><strong>BIENVENIDO</strong> {{user.first_name}} {{user.last_name}}</p>
        <p>Email: {{user.email}}</p>
        <p>Rol: {{user.role}}</p>
        <a href="/api/sessions/logout">Cerrar sesión</a>
    {{/if}}
</div>
<br>
<div>
    {{#each products}}
        <li>
            <strong>Producto: </strong>{{this.title}} - 
            <strong>Descripcion:  </strong>{{this.description}} - 
            <strong>Precio: </strong>{{this.price}} -
            <strong>Categoría: </strong>{{this.category}}
            <a href="/api/products/{{this._id}}"><button>Ir al producto</button></a>
        </li>
    {{/each}}

    <center>
        {{#if hasPrevPage}}
            <a href="/api/products?page={{prevPage}}"><button>Anterior</button></a>
        {{/if}}

        {{#if hasNextPage}}
            <a href="/api/products?page={{nextPage}}"><button>Siguiente</button></a>
        {{/if}}
    </center>
</div>